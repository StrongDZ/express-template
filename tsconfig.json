{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2020",             /* Node.js 14+ hỗ trợ cực tốt ES2020 */
        
        /* Modules */
        "module": "CommonJS",           /* Phù hợp với đại đa số thư viện Node.js hiện tại */
        "moduleResolution": "node",
        "rootDir": "./",                /* Giữ nguyên root là thư mục gốc để bao quát cả src và sdk */
        "resolveJsonModule": true,

        /* Emit - Quan trọng cho Build */
        "outDir": "./build",            /* Đẩy toàn bộ file JS vào build/ */
        "removeComments": true,         /* Xóa comment để giảm dung lượng và bảo mật */
        "sourceMap": false,             /* Tắt khi deploy để tránh lộ mã nguồn gốc qua file map */
        "noEmitOnError": true,          /* Nếu code có lỗi TS, không cho phép build ra file JS */

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking - Nghiêm ngặt để tránh lỗi Runtime */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,         /* Cảnh báo nếu có biến khai báo mà không dùng */
        
        /* Completeness */
        "skipLibCheck": true            /* Build nhanh hơn bằng cách bỏ qua check node_modules */
    },
    "include": ["src/**/*.ts", "sdk/**/*.ts"],
    "exclude": ["node_modules", "swagger", "logs", "build"]
}